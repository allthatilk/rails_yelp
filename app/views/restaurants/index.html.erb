<% if @restaurants.any? %>
  <% @restaurants.each do |restaurant| %>
  <%= link_to restaurant.name, restaurant_path(restaurant) %>
  <p><%= restaurant.description %></p>
  <p><%= link_to "Edit #{restaurant.name}", edit_restaurant_path(restaurant) %>
  <%= link_to "Delete #{restaurant.name}", restaurant_path(restaurant), method: :delete %></p>
  <p><%= link_to "Review #{restaurant.name}", new_restaurant_review_path(restaurant) %>
  <% restaurant.reviews.each do |review| %>
  <p><%= review.thoughts %></p>
  <% end %>
  <br/>
  <% end %>
<% else %>
  <h1>No restaurants yet</h1>
<% end %>

<a href="/restaurants/new">Add a restaurant</a>
